<div id="games-index">

<h1>Games Index</h1>

<!-- Link for developers only: < %= link_to "Game 1 (only click if logged in)", game_path(@games[0]) %> -->

  <% @games.each do |game| %>
  <a href="games/<%= game.id %>">
  <p><span class="game-id">#<%= game.id %></span> <%= game.title[0..30] %>... <span class="subject"><%= game.subject %></span></p>
  </a>
  <% end %>

</div>
