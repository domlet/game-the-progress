<!-- THE NEXT BUTTON -->

<!-- @question comes from games#show which gets from games#controller -->

<%=form_for @question, url: question_path(@question), html: {method: "patch"}, remote: true, authenticity_token: true do |f|%>

  <%=f.hidden_field :question_id, value: @question.id %>
  <%=f.hidden_field :game_id, value: @game.id %>

  <%= f.submit "next", class: "btn btn-primary", data: {send: "question"} %>
<%end%>
