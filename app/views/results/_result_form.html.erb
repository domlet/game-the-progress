<%=form_for result, remote: true, authenticity_token: true do |f|%>
<!-- < %= f.label :your_result%>:
  < %= f.text_area :content, class: "form-control", data: {textarea: "result"}%> -->

  <%=f.hidden_field :user_id, value: current_user.id %>
  <%=f.hidden_field :question_id, value: @question.id %>


  <div><%= f.submit @question.answers[0].text, class: "btn btn-primary", style: "display: inline", data: {send: "result"} %></div>
  <div><%= f.submit @question.answers[1].text, class: "btn btn-primary", style: "display: inline", data: {send: "result"} %></div>
  <div><%= f.submit @question.answers[2].text, class: "btn btn-primary", style: "display: inline", data: {send: "result"} %></div>
  <div><%= f.submit @question.answers[3].text, class: "btn btn-primary", style: "display: inline", data: {send: "result"} %></div>
<%end%>
